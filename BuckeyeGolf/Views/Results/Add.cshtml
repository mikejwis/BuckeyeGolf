
@{
    ViewBag.Title = "Add";
}

@model BuckeyeGolf.ViewModels.AddRoundWeekViewModel
@using (Html.BeginForm("Add", "Results", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    if (ViewBag.Empty==true)
    {
            <div class="row">
                <div class="col-md-12">
                    <h3>All rounds have been played.  Please add matchups for the week before adding results.</h3>
                </div>
            </div>
    }
    else 
    {
        <div class="row">
            <div class="col-md-12">
                <h2>Add Results for Week #@ViewBag.WeekNbr @Html.HiddenFor(m => m.WeekId)</h2>
            </div>
        </div>
       <div class="row">
           <div class="col-md-2">
               <p>Front/Back:</p>
           </div>
           <div class="col-md-10">
               <p>@Html.DropDownListFor(m => m.FrontBack, ViewBag.FrontBackList as IEnumerable<SelectListItem>)</p>
           </div>   
        </div>
        <div class="row">
            <div class="col-md-2">
                <p>Player</p>
            </div>
            <div class="col-md-1">
                <p>Hole</p>
            </div>
            <div class="col-md-1">
                <p>1</p>
            </div>
            <div class="col-md-1">
                <p>2</p>
            </div>
            <div class="col-md-1">
                <p>3</p>
            </div>
            <div class="col-md-1">
                <p>4</p>
            </div>
            <div class="col-md-1">
                <p>5</p>
            </div>
            <div class="col-md-1">
                <p>6</p>
            </div>
            <div class="col-md-1">
                <p>7</p>
            </div>
            <div class="col-md-1">
                <p>8</p>
            </div>
            <div class="col-md-1">
                <p>9</p>
            </div>
            <div class="col-md-1">
                <p></p>
            </div>
        </div>

        for (int i = 0; i < Model.PlayerRounds.Count(); i++)
        {
        <div class="row">
            <div class="col-md-2">
                <p>@Html.DisplayFor(m=>m.PlayerRounds[i].PlayerName) @Html.HiddenFor(m=>m.PlayerRounds[i].PlayerId)</p>
            </div>
            <div class="col-md-1">
                <p></p>
            </div>
            @for(int j=0; j < Model.PlayerRounds[i].Scores.Count(); j++)
            {
            <div class="col-md-1">
                <p>@Html.TextBoxFor(m => m.PlayerRounds[i].Scores[j], new { size = "2", maxlength = "2" })</p>
            </div>
            }

        </div>
        }
        <div class="row">
            <div class="col-md-12">
                <p></p>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        }
        }
