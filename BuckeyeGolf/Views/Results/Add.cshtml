
@{
    ViewBag.Title = "Add";
}

@model BuckeyeGolf.ViewModels.AddRoundWeekViewModel
@using (Html.BeginForm("Add", "Results", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-12">
            <h2>Add Results for Week #@ViewBag.WeekNbr @Html.HiddenFor(m => m.WeekId)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>Player</h3>
        </div>
        <div class="col-md-4">
            <h3>Score</h3>
        </div>
        <div class="col-md-4">
            <h3>Points Earned</h3>
        </div>
    </div>

    for (int i = 0; i < Model.PlayerRounds.Count(); i++)
    {
        <div class="row">
            <div class="col-md-4">
                <p>@Html.DisplayFor(m=>m.PlayerRounds[i].PlayerName) @Html.HiddenFor(m=>m.PlayerRounds[i].PlayerId)</p>
            </div>
            <div class="col-md-4">
                <p>@Html.TextBoxFor(m => m.PlayerRounds[i].Score)</p>
            </div>
            <div class="col-md-4">
                <p>@Html.TextBoxFor(m=>m.PlayerRounds[i].Points)</p>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <p></p>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}
