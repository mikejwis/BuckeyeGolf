
@{
    ViewBag.Title = "Add";
}
@model BuckeyeGolf.ViewModels.AddPlayerMatchupViewModel
@using (Html.BeginForm("Add", "Matchups", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    
        <div class="row">
            <div class="col-md-12">
                <h2>Add Matchups for Week #@ViewBag.NewWeekNbr @Html.HiddenFor(m => m.WeekNbr)</h2>
            </div>
        </div>

    for (int i = 0; i < ViewBag.NbrOfMatchups; i++)
    {
        <div class="row">
            <div class="col-md-4">
                <p>@Html.DropDownListFor(m => m.Player1Id[i], ViewBag.PlayerSelectList as IEnumerable<SelectListItem>)</p>
            </div>
            <div class="col-md-4">
                <p>vs</p>
            </div>
            <div class="col-md-4">
                <p><p>@Html.DropDownListFor(m => m.Player2Id[i], ViewBag.PlayerSelectList as IEnumerable<SelectListItem>)</p>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <p></p>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}

